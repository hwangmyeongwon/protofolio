    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/assets/img/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/assets/img/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/assets/img/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/assets/img/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="/assets/img/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets/img/favicon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/assets/img/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
        
    <meta property="og:title" content="<%= username %>의 포트폴리오">
    <meta property="og:type" content="website">
    <meta property="og:image" content="https://protofolio.mgchoi.com/assets/img/og_image.png">
    <meta property="og:description" content="개발자의 포트폴리오를 Pro 답게">
</head>

<body>
    <nav class="navbar navbar-expand bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/u/<%= userId %>"><%= username %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/u/<%= userId %>/profile">프로필</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/u/<%= userId %>/write">글쓰기</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/u/<%= userId %>/write/activity">활동기간,수상내역</a>
            </li>
            <li class="nav-item">
              <!-- 로그아웃버튼 -->
              <a class="nav-link" href="/logout">로그아웃</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container mt-5">
        <h2>활동기간 📑</h2>
        <form action="/u/<%= userId %>/activity/<%= activityId %>/edit" method="post">
            <label for="content">활동기간</label>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="start date(2022.02)" aria-label="start date"
                        name="startDate" value="<%= data.startDate %>" required>
                </div>
                <div class="col" style="text-align: center;">
                    <span>~</span>
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="end date(2022.02)" aria-label="end date"
                        name="endDate" value="<%= data.endDate %>" required>
                </div>
                <label for="activityName" class="form-label">활동명</label>
                <div class="col-12">
                    <input type="text" class="form-control" name="activityName" id="activityName" placeholder="활동명"
                        value="<%= data.activityName %>" required>
                </div>
                <label for="activityDetail" class="form-label">활동 상세 내용</label>
                <div class="col-12">
                    <input type="text" class="form-control" name="activityDetail" id="activityDetail"
                        value="<%= data.activityDetail %>" placeholder="활동 상세 내용">
                </div>
                <div>
                    <label></label>
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-dark">등록</button>
                    <a type="button" class="btn btn-outline-danger" href="/u/<%= userId %>/activity/<%= data.activityId %>/delete">삭제</a>
                </div>
                <div>
                    <label></label>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>