                        str += '<header><h6>' + data[i].date + '</h6></header>';
                        str += '<p>' + prizeIcon + data[i].prizeName + '  [' + data[i].awardName + ']</p></div>';
                    }
                    $("#award").html(str);
                },
                error: function (xhr, status, error) { }
            });
        });
    </script>
