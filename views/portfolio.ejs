    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: "/u/<%= userId %>/project",
                type: "GET",
                async: true,
                timeout: 3000,
                beforeSend: function () {
                    $("#projects").text("");
                },
                success: function (data, status, xhr) {
                    var str = "";
                    for (var i = 0; i < data.length; i++) {
                        str += '<div class="content neumorph-card p-3">';
                        str += '<header><h6>' + data[i].title + '</h6></header>';
                        str += '<p>' + data[i].content + '</p></div>';
                    }
                    $("#projects").html(str);
                },
                error: function (xhr, status, error) { }
            });

            $.ajax({
                url: "/u/<%= userId %>/activity",
                type: "GET",
                async: true,
                timeout: 3000,
                beforeSend: function () {
                    $("#activities").text("");
                },
                success: function (data, status, xhr) {
                    var str = "";
                    for (var i = 0; i < data.length; i++) {
                        str += '<div class="content neumorph-card p-3">';
                        str += '<header><h6>' + data[i].startDate + ' ~ ' + data[i].endDate + '</h6></header>';
                        str += '<p>' + data[i].activityName + '</p></div>';
                    }
                    $("#activities").html(str);
                },
                error: function (xhr, status, error) { }
            });

            $.ajax({
                url: "/u/<%= userId %>/award",
                type: "GET",
                async: true,
                timeout: 3000,
                beforeSend: function () {
                    $("#award").text("");
                },
                success: function (data, status, xhr) {
